<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.activity.SeatActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示/隐藏图标" />

        <Button
            android:id="@+id/btn_arrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动排列" />

        <Button
            android:id="@+id/btn_1920x1080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920x1080" />

        <Button
            android:id="@+id/btn_1920x1200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920x1200" />

        <Button
            android:id="@+id/btn_2560x1600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2560x1600" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#DDF4D6">

        <xlk.demo.test.ui.CustomSeatView
            android:id="@+id/seat_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>